{
  "name": "psren/viewmodel-bundle",
  "type": "library",
  "description": "ViewModels for Symfony",
  "keywords": [
    "view model",
    "templating",
    "twig"
  ],
  "homepage": "https://github.com/psren/viewmodel-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Patrick Heller",
      "email": "paddy.heller@gmail.com",
      "homepage": "https://twitter.com/psren",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~7.1",
    "symfony/serializer": "^4.0"
  },
  "require-dev": {
    "nyholm/symfony-bundle-test": "^1.4",
    "phpunit/phpunit": ">=5.4.3",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Psren\\ViewModelBundle\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Psren\\ViewModelBundle\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
