<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Psren\ViewModelBundle\ViewModelFactory">
            <argument type="tagged" tag="psren.view_model" />
        </service>
        <service id="Psren\ViewModelBundle\EventListener\TransformPresentationToResponse">
            <argument type="service" id="service_container" />
            <tag name="kernel.event_listener" event="kernel.view" />
        </service>
    </services>
</container>